<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dronetitle"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingStart="60dp"
    android:paddingEnd="60dp">

    <!-- 점검 버튼-->
    <Button
        android:id="@+id/btn_check"
        android:layout_width="115dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundbtn"
        android:text="확인용"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />
    <!-- 로그-->
    <RelativeLayout
        android:layout_width="510dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:visibility="gone">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:paddingTop="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/complete_ui_widgets"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Complete Demo of Default UI Widgets"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_customized_ui_widgets"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Demo on Customized UI Widgets"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:visibility="gone" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Version" />

        <EditText
            android:id="@+id/edittext_bridge_ip"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:digits="0123456789.\n"
            android:gravity="center"
            android:hint="@string/wsbridge_ip"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#77000000"
            android:text="처음 초기값"
            android:textColor="@color/white"
            android:textSize="14sp" />
        >

    </RelativeLayout>


    <!-- 팝업창-->
    <RelativeLayout
        android:id="@+id/view_userInfo"
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:background="#232228"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btn_drone1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:background="@drawable/drone2"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_drone1"
            android:layout_marginLeft="75dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="드론 1"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00000000"
            />


        <ImageButton
            android:id="@+id/btn_drone2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:background="@drawable/drone2"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_drone2"
            android:layout_marginRight="75dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="드론 2"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00000000"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="monospace"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="접속하실 드론을 선택해 주세요."
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


