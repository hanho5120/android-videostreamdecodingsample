<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dronetitle"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingStart="60dp"
    android:paddingEnd="60dp">

    <!-- 윗부분-->
    <RelativeLayout
        android:layout_width="510dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="355dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:visibility="visible">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0"
            android:paddingTop="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/complete_ui_widgets"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Complete Demo of Default UI Widgets"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_customized_ui_widgets"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="Demo on Customized UI Widgets"
            android:textColor="@color/background_blue"
            android:textSize="14sp"
            android:visibility="gone" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="Version" />

        <EditText
            android:id="@+id/edittext_bridge_ip"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:digits="0123456789.\n"
            android:gravity="center"
            android:hint="@string/wsbridge_ip"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#77000000"
            android:text="처음 초기값"
            android:textColor="@color/white"
            android:textSize="14sp" />
        >

    </RelativeLayout>


    <!-- 아래부분-->
    <RelativeLayout
        android:id="@+id/view_userInfo"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_below="@+id/view_droneimg"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:background="#232228"
        android:visibility="visible">


        <Button
            android:id="@+id/btn_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/leftmenu_dlg_cancel" />

        <EditText
            android:id="@+id/edit_idText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="#19181D"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:gravity="center"
            android:hint="  드론의  아이디를  입력하세요."
            android:maxLength="15"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edit_pwText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_idText"
            android:layout_centerInParent="true"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="10dp"
            android:background="#19181D"
            android:drawableStart="@drawable/ic_baseline_https_24"
            android:gravity="center"
            android:hint="   드론의 비밀번호를 입력하세요."
            android:inputType="textPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_map_widget"
            android:layout_width="115dp"
            android:layout_height="28dp"
            android:layout_below="@+id/edit_pwText"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundbtn"
            android:text="LOG IN"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>

    <!--드론 이미지-->
    <RelativeLayout
        android:id="@+id/view_droneimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle" />

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_drone"
            android:backgroundTint="@color/white" />
    </RelativeLayout>


