    <!--드론 이미지-->
    <RelativeLayout
        android:id="@+id/view_droneimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:background="#00000000"
        android:layout_alignTop="@+id/view_userInfo"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_drone"
            android:backgroundTint="@color/white" />
    </RelativeLayout>

    <!--안내 문구-->
    <RelativeLayout
        android:id="@+id/view_inform"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-80dp"
        android:background="#00000000"
        android:layout_alignBottom="@+id/view_userInfo"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="휴대폰과 컨트롤러를 연결하시면 팝업창이 나옵니다."
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>

